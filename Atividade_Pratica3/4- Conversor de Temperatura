temperatura = float(input("Digite a temperatura: "))
unidade_origem = input("Digite a unidade de origem (C, F ou K): ").upper()
unidade_converter = input("Digite a unidade de destino (C, F ou K): ").upper()

# converte pra Celsius
if unidade_origem == 'F':
    temperatura = (temperatura - 32) * 5/9
elif unidade_origem == 'K':
    temperatura = temperatura - 273.15

# converte de Celsius pra destino
if unidade_converter == 'F':
    convertido = (temperatura * 9/5) + 32
elif unidade_converter == 'K':
    convertido = temperatura + 273.15
else:
    convertido = temperatura

print(f"\nValor convertido: {convertido:.2f}Â°{unidade_converter}")